<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bb"
    android:orientation="vertical"
    tools:context=".activity.LoginActivity">


    <TextView
        android:id="@+id/tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_40"
        android:text="您好，"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/sp_19"

        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_13"
        android:layout_marginTop="@dimen/dp_16"
        android:text="欢迎来到AA聚，"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/sp_19"

        />

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_40"
        android:gravity="center"
        android:orientation="horizontal"

        >
<!--  280-109=????000000-->
        <EditText

            android:id="@+id/ed_phone"
            android:layout_width="@dimen/dp_171"
            android:layout_height="@dimen/dp_52"
            android:background="@drawable/rounded_edittext"
            android:gravity="center"
            android:hint="请输入手机号"
            android:textColor="#E0DDDD"
            android:textColorHint="#F7F7F7"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/ed_yzm"
            android:layout_width="@dimen/dp_109"
            android:layout_height="@dimen/dp_52"
            android:background="@drawable/code_bg"
            android:gravity="center"
            android:text="  获取验证码"
            android:textColor="#FFFFFF"
            android:textColorHint="#ffaaaaaa"
            android:textSize="12sp" />

    </LinearLayout>

    <EditText
        android:layout_width="@dimen/dp_280"
        android:layout_height="@dimen/dp_52"
        android:layout_gravity="center"

        android:layout_marginTop="20dp"
        android:background="@drawable/rounded_edittext"
        android:gravity="center"
        android:hint="请输入验证码"
        android:textColor="#FFFFFF"
        android:textColorHint="#F2F3F2" />

    <Button
        android:id="@+id/bt_login"
        android:layout_width="@dimen/dp_279"
        android:layout_height="@dimen/dp_54"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:background="@drawable/round_edhint"

        android:gravity="center"
        android:text="登录"
        android:textIsSelectable="true"
        android:textSize="15sp"
        android:visibility="visible" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp_54"
        android:text="其他登录方式"
        android:textColor="#ffffff"
        android:textSize="28px" />

    <ImageView
        android:id="@+id/Vx_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:background="@mipmap/vx"
        android:paddingTop="5dp" />

    <TextView
        android:layout_marginTop="@dimen/dp_12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="首次登录为哏儿吧用户"
        android:textSize="12sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:paddingBottom="@dimen/dp_26"
        android:text="登录即表示您同意哏儿吧用户协议和隐私政策"
        android:textColor="#FF9800"
        android:textSize="12sp" />
</LinearLayout>

