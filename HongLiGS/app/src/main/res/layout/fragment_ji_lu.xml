<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F2F2"
    android:orientation="vertical"
    tools:context=".fragment.HomepageFragment">


    <com.youth.banner.Banner
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_160" />
    <LinearLayout
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/home_dt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:text="动态广场"
                android:textColor="#FF000000"
                android:textSize="@dimen/sp_18" />

            <View
                android:id="@+id/home_text"
                android:layout_width="@dimen/dp_35"
                android:layout_height="@dimen/dp_2"

                android:layout_marginTop="@dimen/dp_2"
                android:background="#039BE5"
                android:visibility="visible" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/home_hot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:text="热门群聊"
                android:textColor="#FF666666"
                android:textSize="@dimen/sp_18" />

            <View
                android:id="@+id/home_title"
                android:layout_width="35dp"
                android:layout_height="2dp"

                android:layout_marginTop="5dp"
                android:background="#039BE5"
                android:visibility="invisible" />
        </LinearLayout>

        <ImageView
            android:id="@+id/Image_shalou"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/dp_16"
            android:src="@mipmap/shalou" />

    </LinearLayout>

    <com.example.hongligs.view.NoScrollViewPager
        android:id="@+id/myVpview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>